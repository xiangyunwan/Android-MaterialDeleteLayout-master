<com.cjj.MaterialDeleteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_delete_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <!--content-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:clickable="true">


        <TextView
            android:layout_toRightOf="@+id/tx"
            android:id="@+id/id_content_tv"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/tx"
            android:layout_marginLeft="10dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hello CJJ"
            android:textSize="24sp" />
    </android.support.v7.widget.CardView>

    <!--right -->
    <FrameLayout
        android:id="@+id/id_right_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/id_conten_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="10sp" />
    </FrameLayout>


</com.cjj.MaterialDeleteLayout>

